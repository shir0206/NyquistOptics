<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_layout_border">

    <Button
        android:id="@+id/btn_TargetInput"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_target_size"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="@string/btn_TargetInput"
        app:layout_constraintEnd_toEndOf="@+id/tv_txtChooseAction"
        app:layout_constraintStart_toStartOf="@+id/tv_txtChooseAction"
        app:layout_constraintTop_toBottomOf="@+id/tv_txtChooseAction" />

    <Button
        android:id="@+id/btn_FOVInput"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_ifov"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:text="@string/btn_FOVInput"
        app:layout_constraintEnd_toEndOf="@+id/tv_txtChooseAction"
        app:layout_constraintStart_toStartOf="@+id/tv_txtChooseAction"
        app:layout_constraintTop_toBottomOf="@+id/btn_TargetInput" />

    <TextView
        android:id="@+id/tv_txtChooseAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_ChooseAction"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />
</android.support.constraint.ConstraintLayout>