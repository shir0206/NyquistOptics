<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_dimension"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_dimension"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_dimension_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_focalLength"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_focalLength"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_focal_length"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_focalLength_txt"
        app:layout_constraintEnd_toStartOf="@+id/btn_dimension"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_focalLength_txt"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:singleLine="false"
        android:text="@string/btn_txtFocalLength"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_fov"
        app:layout_constraintEnd_toStartOf="@+id/btn_dimension_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_focalLength" />

    <TextView
        android:id="@+id/btn_dimension_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:singleLine="false"
        android:text="@string/btn_txtDimension"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_dri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_focalLength_txt"
        app:layout_constraintTop_toBottomOf="@+id/btn_dimension" />

    <Button
        android:id="@+id/btn_dri"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_dri"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_dri_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_fov"
        app:layout_constraintTop_toBottomOf="@+id/btn_dimension_txt" />

    <TextView
        android:id="@+id/btn_fov_txt"
        android:layout_width="173dp"
        android:layout_height="18dp"
        android:singleLine="false"
        android:text="@string/btn_txtFOV"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_dri_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_fov" />

    <TextView
        android:id="@+id/btn_dri_txt"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:foregroundGravity="center"
        android:singleLine="false"
        android:text="@string/btn_txtDRI"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_fov_txt"
        app:layout_constraintTop_toBottomOf="@+id/btn_dri" />

    <Button
        android:id="@+id/btn_fov"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ic_frame"
        android:drawableTop="@drawable/ic_ifov"
        android:paddingTop="32dp"
        android:paddingBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_fov_txt"
        app:layout_constraintEnd_toStartOf="@+id/btn_dri"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_focalLength_txt" />


</android.support.constraint.ConstraintLayout>